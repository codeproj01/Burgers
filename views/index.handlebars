<div class="container">
<h1>Eat-Da-Burger!</h1>
<div id="main">
  <div id="waiting">
    <h3>Burgers waiting to be devoured</h3>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour It!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img id="photo" src="/assets/img/burger.jpg" width="150px">

<div class="the-buttons">
  <div id="devoured">
    <h3>Burgers devoured!</h3>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">UN-devour burger</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

